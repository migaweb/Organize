@page "/counter"

<h1>Counter</h1>

<Dialog Message="Ett fel inträffade!" Header="Error" DialogClosed="HandleDialogClosed" Isvisible="IsVisible"></Dialog>
<p>@DialogResult</p>
<p>Current count: @currentCount</p>

<button class="btn btn-primary"
        @onclick="IncrementCount">
    Click me
</button>

<button onclick="alert('Hello from JS')">Invoke pure JS</button>

@code {
  private int currentCount = 0;
  public string DialogResult { get; set; }
  public bool IsVisible { get; set; }

  private void IncrementCount()
  {
      currentCount++;
      IsVisible = !IsVisible;
  }

  public void HandleDialogClosed(Entities.DialogResult dialogResult)
  {
      DialogResult = dialogResult.ToString();
      IsVisible = false;
  }
}
